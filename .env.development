# Development Environment Variables
DATABASE_TYPE=postgresql
DB_HOST=postgres_dev
DB_PORT=5432
DB_NAME=cafe_system_dev
DB_USER=postgres
DB_PASSWORD=dev_password

# Redis Configuration
REDIS_HOST=redis_dev
REDIS_PORT=6379

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=true
FLASK_ENV=development
FLASK_SECRET_KEY=dev-secret-key-not-for-production

# Face Recognition Configuration
FACE_RECOGNITION_TOLERANCE=0.6
MAX_FACE_DISTANCE=0.5
FACE_ENCODING_MODEL=small

# Camera Configuration
CAMERA_INDEX=0
FRAME_WIDTH=640
FRAME_HEIGHT=480

# Recommendation Engine Configuration
MIN_ORDERS_FOR_RECOMMENDATION=2
RECOMMENDATION_WEIGHT_FREQUENCY=0.4
RECOMMENDATION_WEIGHT_RECENCY=0.3
RECOMMENDATION_WEIGHT_SIMILARITY=0.3

# File Paths
CUSTOMER_DIR=/app/data/customers
DATABASE_DIR=/app/data/database
MODELS_DIR=/app/data/models
STATIC_DIR=/app/static
TEMPLATES_DIR=/app/templates

# Development Settings
WATCHDOG_ENABLED=true
HOT_RELOAD=true

# Logging
LOG_LEVEL=DEBUG
LOG_FILE=/app/logs/cafe_system_dev.log

# Email Configuration (MailHog for development)
MAIL_SERVER=mailhog
MAIL_PORT=1025
MAIL_USE_TLS=false
MAIL_USERNAME=
MAIL_PASSWORD=

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=dev@cafe.com
PGADMIN_DEFAULT_PASSWORD=dev123
