# Production Environment Variables
DATABASE_TYPE=postgresql
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cafe_system
DB_USER=postgres
DB_PASSWORD=cafe_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Flask Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false
FLASK_ENV=production
FLASK_SECRET_KEY=change-this-in-production-to-a-secure-random-string

# Face Recognition Configuration
FACE_RECOGNITION_TOLERANCE=0.6
MAX_FACE_DISTANCE=0.5
FACE_ENCODING_MODEL=large

# Camera Configuration
CAMERA_INDEX=0
FRAME_WIDTH=640
FRAME_HEIGHT=480

# Recommendation Engine Configuration
MIN_ORDERS_FOR_RECOMMENDATION=3
RECOMMENDATION_WEIGHT_FREQUENCY=0.4
RECOMMENDATION_WEIGHT_RECENCY=0.3
RECOMMENDATION_WEIGHT_SIMILARITY=0.3

# File Paths
CUSTOMER_DIR=/app/data/customers
DATABASE_DIR=/app/data/database
MODELS_DIR=/app/data/models
STATIC_DIR=/app/static
TEMPLATES_DIR=/app/templates

# Security
BCRYPT_LOG_ROUNDS=12
JWT_SECRET_KEY=change-this-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=86400

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/cafe_system.log

# Email Configuration (optional)
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=false
MAIL_USERNAME=
MAIL_PASSWORD=

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@cafe.com
PGADMIN_DEFAULT_PASSWORD=admin123
